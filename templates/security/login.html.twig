{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="mt-5" style="height: 550px;">
                <h2 class="text-center">Connexion</h2>

            

                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.cin, 'CIN') }}
                        {{ form_widget(form.cin, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.cin) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.password, 'Mot de passe') }}
                        {{ form_widget(form.password, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.password) }}
                    </div>

                    <div class="form-group text-center mt-3">
                         <div class="g-recaptcha" data-sitekey="{{ google_recaptcha_site_key }}"></div>
                        <p>{{ google_recaptcha_site_key }}</p> 
                    </div>
                    
                    
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button type="submit" class="btn btn-primary w-100 mt-3">Se connecter</button>
                    <div class="mt-3 text-center">
                        <a href="{{ path('app_forgot_password') }}">Mot de passe oublié ?</a>
                    </div>
                {{ form_end(form) }}

                <div class="mt-3 text-center">
                    <p>Pas encore de compte ? <a href="{{ path('SignUp') }}">Créez un compte ici</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}



