{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="mt-5" style="height: 400px;">
                <h2 class="text-center">Mot de passe oublié</h2>

                <form method="post">
                    <div class="form-group">
                        <label for="cin">Entrez votre CIN :</label>
                        <input type="text" id="cin" name="cin" class="form-control" required>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mt-3">Envoyer le lien de réinitialisation</button>
                </form>

                <div class="mt-3 text-center">
                    <a href="{{ path('login') }}">Retour à la connexion</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
