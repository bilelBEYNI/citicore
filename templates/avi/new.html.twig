{% extends 'base.html.twig' %}

{% block title %}Créer un Nouvel Avis{% endblock %}

{% block body %}
    <h1>Créer un Nouvel Avis</h1>

    {{ form_start(form) }}
        {{ form_row(form.auteur) }}
        {{ form_row(form.message) }}
        {{ form_row(form.note) }}
        {{ form_row(form.createdAt) }}
        <button type="submit" class="btn btn-success">Créer</button>
    {{ form_end(form) }}

    <a href="{{ path('app_avi_index') }}" class="btn btn-secondary">Retour à la liste</a>
{% endblock %}
