{% extends '/front/index.html.twig' %}

{% block title %}R√©clamations{% endblock %}

{% block body %}
{% include 'front/navbar.html.twig' %}
<div class="container mt-5">
    <h2 class="mb-4 text-center">üìã Mes R√©clamations</h2>

    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" id="filterInput" class="form-control" placeholder="üîç Filtrer par sujet...">
        </div>
    </div>

    <table class="table table-hover" id="reclamationsTable">
        <thead class="table-dark">
            <tr>
                <th>ID_Reclamation</th>
                <th>Sujet</th>
                <th>Description</th>
                <th>Date_Creation</th>
                <th>Date_Resolution</th>
                <th>Type_Reclamation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.ID_Reclamation }}</td>
                <td>{{ reclamation.Sujet }}</td>
                <td>{{ reclamation.Description }}</td>
                <td>{{ reclamation.Date_Creation ? reclamation.Date_Creation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reclamation.Date_Resolution ? reclamation.Date_Resolution|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reclamation.Type_Reclamation }}</td>
                
                <td>
                    {% if reclamation.reponses|length > 0 %}
                        <span class="badge bg-success">R√©pondu</span>
                    {% else %}
                        <span class="badge bg-warning text-dark">En attente</span>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_reclamation_show', {'ID_Reclamation': reclamation.ID_Reclamation})  }}" class="btn btn-sm btn-primary">üëÅ Voir</a>
                    <a href="{{ path('app_reclamation_edit', {'ID_Reclamation': reclamation.ID_Reclamation})  }}" class="btn btn-sm btn-warning">‚úèÔ∏è Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="5">Aucune r√©clamation trouv√©e.</td></tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_reclamation_new')  }}" class="btn btn-success">‚ûï Ajouter une reclamation</a>
</div>

<script>
    document.getElementById('filterInput').addEventListener('keyup', function () {
        let filter = this.value.toLowerCase();
        let rows = document.querySelectorAll('#reclamationsTable tbody tr');
        rows.forEach(row => {
            let sujet = row.children[1].textContent.toLowerCase();
            row.style.display = sujet.includes(filter) ? '' : 'none';
        });
    });

    document.getElementById('statusFilter').addEventListener('change', function () {
        let status = this.value;
        let rows = document.querySelectorAll('#reclamationsTable tbody tr');
        rows.forEach(row => {
            let badge = row.querySelector('.badge');
            let currentStatus = badge.classList.contains('bg-success') ? 'repondu' : 'en_attente';
            row.style.display = status === '' || status === currentStatus ? '' : 'none';
        });
    });
</script>
{% endblock %}
