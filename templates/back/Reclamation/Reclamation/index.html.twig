{% extends 'back/Dashboard.html.twig' %}

{% block title %}R√©clamations{% endblock %}

{% block body %}
<div class="container my-5" style="margin-left: 300px; padding-bottom: 50px;">
    {# Affichage des flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    <h2 class="mb-4 text-center">üìã Mes R√©clamations</h2>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="{{ path('app_reclamation_new') }}" class="btn btn-success">‚ûï Ajouter une R√©clamation</a>

        <form method="get" class="d-flex gap-2">
            <input type="text" name="q" value="{{ currentQuery }}" class="form-control" placeholder="üîç Recherche sujet...">
            <select name="type" class="form-select">
                <option value="">üìÇ Tous les types</option>
                <option value="Marketplace" {{ currentType == 'Marketplace' ? 'selected' }}>Marketplace</option>
                <option value="Demande" {{ currentType == 'Demande' ? 'selected' }}>Demande</option>
                <option value="Evenement" {{ currentType == 'Evenement' ? 'selected' }}>√âv√©nement</option>
                <option value="ProjetDons" {{ currentType == 'ProjetDons' ? 'selected' }}>ProjetDons</option>
            </select>
            <button type="submit" class="btn btn-primary">Filtrer</button>
        </form>
    </div>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({ 'sort': 'r.Sujet', 'direction': currentSort == 'r.Sujet' and currentDirection == 'asc' ? 'desc' : 'asc' })) }}">
                        Sujet
                        {% if currentSort == 'r.Sujet' %}
                            <i class="bi bi-chevron-{{ currentDirection == 'asc' ? 'down' : 'up' }}"></i>
                        {% endif %}
                    </a>
                </th>
                <th>Description</th>
                <th>Date_Creation</th>
                <th>Date r√©solution</th>
                <th>
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({ 'sort': 'r.Type_Reclamation', 'direction': currentSort == 'r.Type_Reclamation' and currentDirection == 'asc' ? 'desc' : 'asc' })) }}">
                        Type
                        {% if currentSort == 'r.Type_Reclamation' %}
                            <i class="bi bi-chevron-{{ currentDirection == 'asc' ? 'down' : 'up' }}"></i>
                        {% endif %}
                    </a>
                </th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.Sujet }}</td>
                <td>{{ reclamation.Description }}</td>
                <td>{{ reclamation.Date_Creation ? reclamation.Date_Creation|date('Y-m-d H:i') : '' }}</td>
                <td>{{ reclamation.Date_Resolution ? reclamation.Date_Resolution|date('Y-m-d H:i') : '-' }}</td>
                <td>{{ reclamation.Type_Reclamation }}</td>
                <td>
                    {% if reclamation.reponses|length > 0 %}
                        <span class="badge bg-success">R√©pondu</span>
                    {% else %}
                        <span class="badge bg-warning text-dark">En attente</span>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_reclamation_show', {'ID_Reclamation': reclamation.ID_Reclamation}) }}" class="btn btn-sm btn-primary">üëÅ Voir</a>
                    <a href="{{ path('app_reclamation_edit', {'ID_Reclamation': reclamation.ID_Reclamation}) }}" class="btn btn-sm btn-warning">‚úèÔ∏è Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center text-muted">Aucune r√©clamation trouv√©e.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-4">
        {{ knp_pagination_render(reclamations, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
    </div>
</div>



{% endblock %}
