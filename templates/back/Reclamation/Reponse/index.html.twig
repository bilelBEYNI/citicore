{% extends 'back/Dashboard.html.twig' %}

{% block title %}Réponses{% endblock %}

{% block body %}
<div class="container my-5" style="margin-left: 300px; padding-bottom: 50px;">
    {# Flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <h2 class="mb-4 text-center">📋 Mes Réponses</h2>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <select id="reclamationSelect" class="form-select me-2">
                <option value="">🔽 Choisir un sujet</option>
                {% for reclamation in reclamations %}
                    <option value="{{ reclamation.ID_Reclamation }}" {{ reclamation.ID_Reclamation == currentRec ? 'selected' }}>
                        📝 {{ reclamation.Sujet }}
                    </option>
                {% endfor %}
            </select>
            <button type="button" id="addResponseBtn" class="btn btn-success">Ajouter une réponse</button>
        </div>

        <form method="get" class="d-flex gap-2">
            <input type="text" name="q" value="{{ currentQuery }}" class="form-control" placeholder="🔍 Recherche...">
            <select name="statut" class="form-select">
                <option value="">🔍 Tous statuts</option>
                <option value="En Cours" {{ currentStatus == 'En Cours' ? 'selected' : '' }}>🕒 En Cours</option>
                <option value="Traitée" {{ currentStatus == 'Traitée' ? 'selected' : '' }}>✅ Traitée</option>
                <option value="Rejetée" {{ currentStatus == 'Rejetée' ? 'selected' : '' }}>❌ Rejetée</option>
            </select>
            <button type="submit" class="btn btn-primary">Filtrer</button>
        </form>
    </div>
    <div class="d-flex justify-content-end mb-3">
        <a href="{{ path('app_reponse_stats') }}" class="btn btn-info">
            📊 Statistiques des Réponses
        </a>
    </div>


    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({ 'sort': 'rec.Sujet', 'direction': currentSort == 'rec.Sujet' and currentDirection == 'asc' ? 'desc' : 'asc' })) }}">
                        Sujet
                        {% if currentSort == 'rec.Sujet' %}
                            <i class="bi bi-chevron-{{ currentDirection == 'asc' ? 'down' : 'up' }}"></i>
                        {% endif %}
                    </a>
                </th>
                <th>Contenu</th>
                <th> Date Réponse </th>
                <th>
                    <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({ 'sort': 'r.Statut', 'direction': currentSort == 'r.Statut' and currentDirection == 'asc' ? 'desc' : 'asc' })) }}">
                        Statut
                        {% if currentSort == 'r.Statut' %}
                            <i class="bi bi-chevron-{{ currentDirection == 'asc' ? 'down' : 'up' }}"></i>
                        {% endif %}
                    </a>
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for reponse in reponses %}
                <tr>
                    <td>{{ reponse.reclamation.Sujet }}</td>
                    <td>{{ reponse.Contenu }}</td>
                    <td>{{ reponse.DateReponse ? reponse.DateReponse|date('Y-m-d H:i') : '-' }}</td>
                    <td>{{ reponse.Statut }}</td>
                    <td>
                        <a href="{{ path('app_reponse_show', {'id': reponse.ID_Reponse}) }}" class="btn btn-sm btn-primary">👁 Voir</a>
                        <a href="{{ path('app_reponse_edit', {'id': reponse.ID_Reponse}) }}" class="btn btn-sm btn-warning">✏️ Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center text-muted">Aucune réponse trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="mt-4">
        {{ knp_pagination_render(reponses, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
    </div>
</div>

<script>
    document.getElementById('addResponseBtn').addEventListener('click', () => {
        const id = document.getElementById('reclamationSelect').value;
        if (id) {
            const url = "{{ path('app_reponse_new', {'id': 'REPLACE'}) }}".replace('REPLACE', id);
            window.location.href = url;
        }
    });
</script>
{% endblock %}
