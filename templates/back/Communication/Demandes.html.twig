{% extends 'back/Dashboard.html.twig' %}

{% block title %}Gestion des Demandes{% endblock %}

{% block body %}
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Liste des Demandes</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Demandes</li>
            </ol>

            <div class="container mt-4">
                <table class="table table-bordered mt-3">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>CIN</th>
                            <th>contenu</th>
                            <th>Statut</th>
                            <th>D√©tails</th>
                            <th>Modifier</th>
                            <th>Supprimer</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for demande in demandes %}
                            <tr>
                                <td>{{ demande.Demande_id }}</td>
                                <td>{{ demande.Utilisateur_id }}</td>
                                <td>{{ demande.contenu }}</td>
                                <td>{{ demande.statut }}</td>
                                
                                <td>
                                
                                </td>
                                <td>
                                    <form method="post" action="{{ path('app_demande_update_status', {'id': demande.Demande_id}) }}">
                                        <select name="statut" class="form-select form-select-sm" onchange="this.form.submit()">
                                            <option value="En attente" {{ demande.statut == 'En attente' ? 'selected' : '' }}>En attente</option>
                                            <option value="Accept√©e" {{ demande.statut == 'Accept√©e' ? 'selected' : '' }}>Accept√©e</option>
                                            <option value="Refus√©e" {{ demande.statut == 'Refus√©e' ? 'selected' : '' }}>Refus√©e</option>
                                        </select>
                                        <input type="hidden" name="_token" value="{{ csrf_token('update_status' ~ demande.Demande_id) }}">
                                    </form>
                                </td>
                                <td>
                                    <a href="{{ path('app_demande_delete', {'id': demande.Demande_id}) }}" class="btn btn-sm btn-danger">üóëÔ∏è</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>

<!-- Modal Bootstrap -->
<div class="modal fade" id="avisModal" tabindex="-1" aria-labelledby="avisModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="avisModalLabel">Liste des Avis</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Contenu des avis charg√© dynamiquement -->
                <div id="avisContent">
                    <p>Chargement des avis...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

<script>
    function loadAvis(demandeId) {
        const avisContent = document.getElementById('avisContent');
        avisContent.innerHTML = '<p>Chargement des avis...</p>';

        fetch(`/demandes/${demandeId}/avis`)
            .then(response => response.json())
            .then(data => {
                if (data.length > 0) {
                    avisContent.innerHTML = '<ul>' + data.map(avis => `<li>${avis.contenu}</li>`).join('') + '</ul>';
                } else {
                    avisContent.innerHTML = '<p>Aucun avis trouv√© pour cette demande.</p>';
                }
            })
            .catch(error => {
                avisContent.innerHTML = '<p>Erreur lors du chargement des avis.</p>';
                console.error('Erreur:', error);
            });
    }
</script>
{% endblock %}
