{% extends 'back/Dashboard.html.twig' %}

{% block title %}Gestion des Demandes{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Liste des Demandes</h1>

            <!-- Filtres -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <label for="searchContent" class="form-label">Rechercher par contenu :</label>
                    <div class="input-group">
                        <input type="text" id="searchContent" class="form-control" placeholder="Rechercher...">
                        <button id="btnSearchContent" class="btn btn-outline-secondary" type="button">Chercher</button>
                    </div>
                </div>
                <div class="col-md-6">
                    <label for="filterDate" class="form-label">Filtrer par date :</label>
                    <div class="input-group">
                        <input type="date" id="filterDate" class="form-control">
                        <button id="btnFilterDate" class="btn btn-outline-secondary" type="button">Filtrer</button>
                        <button id="btnResetFilters" class="btn btn-outline-secondary" type="button">Réinitialiser</button>
                    </div>
                </div>
            </div>

            <!-- Boutons actions -->
            <a href="{{ path('app_demande_export_pdf') }}" target="_blank" class="btn btn-danger mb-3">
                <i class="fas fa-file-pdf"></i> Exporter en PDF
            </a>
            <a href="{{ path('app_demande_stats') }}" class="btn btn-primary mb-3 ms-2">
                <i class="fas fa-chart-pie"></i> Voir statistiques
            </a>
            <a href="{{ path('liste_demandes') }}" class="btn btn-primary mb-3 ms-2">
                <i class="fas fa-chart-pie"></i> Voir Tous les Demandes
            </a>
            
            <!-- Tableau -->
            <div class="table-responsive">
                <table id="demandeTable" class="table table-striped align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Contenu</th>
                            <th>Date</th>
                            <th>Statut</th>
                            <th>Modifier</th>
                            <th>Supprimer</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for demande in demandes %}
                            <tr>
                                <td>{{ demande.demandeId }}</td>
                                <td>{{ demande.contenu }}</td>
                                <td>{{ demande.dateDemande ? demande.dateDemande|date('Y-m-d') : '' }}</td>
                                <td>
                                    <span class="badge {% if demande.statut == 'Acceptée' %}bg-success{% elseif demande.statut == 'Refusée' %}bg-danger{% else %}bg-warning text-dark{% endif %}">
                                        {{ demande.statut }}
                                    </span>
                                </td>
                                <td>
                                    <form action="{{ path('app_demande_update_status', { id: demande.demandeId }) }}" method="post" onsubmit="return confirm('Confirmer la modification du statut ?')">
                                        <div class="input-group input-group-sm">
                                            <select name="statut" class="form-select">
                                                <option value="En attente" {{ demande.statut == 'En attente' ? 'selected' : '' }}>En attente</option>
                                                <option value="Acceptée" {{ demande.statut == 'Acceptée' ? 'selected' : '' }}>Acceptée</option>
                                                <option value="Refusée" {{ demande.statut == 'Refusée' ? 'selected' : '' }}>Refusée</option>
                                            </select>
                                            <button type="submit" class="btn btn-outline-primary">Modifier</button>
                                        </div>
                                    </form>
                                </td>
                                <td>
                                    <a href="{{ path('app_demande_delete', { id: demande.demandeId }) }}" class="btn btn-sm btn-outline-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette demande ?')">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr><td colspan="6" class="text-center text-muted">Aucune demande.</td></tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("searchContent");
        const filterDate = document.getElementById("filterDate");
        const searchBtn = document.getElementById("btnSearchContent");
        const filterBtn = document.getElementById("btnFilterDate");
        const resetBtn = document.getElementById("btnResetFilters");
        const tableRows = document.querySelectorAll("#demandeTable tbody tr");

        function filterTable() {
            const searchValue = searchInput.value.toLowerCase();
            const dateValue = filterDate.value;

            tableRows.forEach(row => {
                const content = row.cells[1].textContent.toLowerCase();
                const date = row.cells[2].textContent;

                const matchContent = content.includes(searchValue);
                const matchDate = !dateValue || date === dateValue;

                if (matchContent && matchDate) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        }

        searchBtn.addEventListener("click", filterTable);
        filterBtn.addEventListener("click", filterTable);
        resetBtn.addEventListener("click", function () {
            searchInput.value = "";
            filterDate.value = "";
            filterTable();
        });
    });
</script>
{% endblock %}
