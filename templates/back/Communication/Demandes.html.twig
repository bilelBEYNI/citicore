{% extends 'back/Dashboard.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Dashboard</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
            
           
            
            <!-- Graphiques pour les statistiques par genre -->
            <div class="row">
                <!-- Graphique des utilisateurs par genre -->
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-pie me-1"></i>
                            Répartition des utilisateurs par genre
                        </div>
                        <div class="card-body">
                            <canvas id="genderChart" width="100%" height="40"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Graphique des utilisateurs par rôle -->
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-pie me-1"></i>
                            Répartition des utilisateurs par rôle
                        </div>
                        <div class="card-body">
                            <canvas id="roleChart" width="100%" height="40"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Liste des demandes -->
            <div class="container mt-4">
                <h1 class="mb-4">Liste des demandes</h1>
             
                
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                    <th>Contenu</th>
                    <th>Date</th>
                    <th>Statut</th>
                    
                    <th>Modifier</th>
                    <th>Supprimer</th>

                            </tr>
                        </thead>
                        <tbody>
                            {% for demande in demandes %}
                            <tr>
                                <td>{{ demande.demandeId }}</td>
                                <td>{{ demande.contenu }}</td>
                                <td>{{ demande.dateDemande ? demande.dateDemande|date('Y-m-d') : 'Non spécifiée' }}</td>
                                <td>{{ demande.statut }}</td>
                                
                                <td>
                                    <form action="{{ path('app_demande_update_status', { id: demande.demandeId }) }}" method="post">
                                        <select name="statut" class="form-select form-select-sm">
                                            <option value="En attente" {{ demande.statut == 'En attente' ? 'selected' : '' }}>En attente</option>
                                            <option value="Acceptée" {{ demande.statut == 'Acceptée' ? 'selected' : '' }}>Acceptée</option>
                                            <option value="Refusée" {{ demande.statut == 'Refusée' ? 'selected' : '' }}>Refusée</option>
                                        </select>
                                        <button type="submit" class="btn btn-warning btn-sm mt-1">Modifier</button>
                                    </form>
                                </td>
                                <td>
                                    <a href="{{ path('app_demande_delete', { id: demande.demandeId }) }}" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
        
                        </tbody>
                    </table>
                </div>
            
                
            </div>
        </div>
    </main>
</div>

{% block stylesheets %}
<style>
    .bg-mauve {
        background-color: #9b59b6 !important;
        color: white !important;
    }
    .bg-mauve-dark {
        background-color: #6f42c1 !important;
        color: white !important;
    }
</style>
{% endblock %}



{% endblock %}
