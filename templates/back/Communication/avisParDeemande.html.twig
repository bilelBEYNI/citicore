{% extends 'base.html.twig' %}

{% block title %}Avis liés à la Demande{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">Avis liés à la Demande</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Utilisateur</th>
                    <th>Commentaire</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                {% for avis in avis %}
                    <tr>
                        <td>{{ avis.id }}</td>
                        <td>{{ avis.Utilisateur_id }}</td>
                        <td>{{ avis.commentaire }}</td>
                        <td>{{ avis.date_avis|date('Y-m-d H:i') }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucun avis trouvé pour cette demande.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}