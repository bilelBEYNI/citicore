{% extends 'back/Dashboard.html.twig' %}

{% block title %}Modifier un Produit{% endblock %}

{% block body %}
<div class="container my-5" style="margin-left: 250px; padding-bottom: 50px;">
    <h2>Modifier le produit</h2>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    {% if produit.photo %}
        <div class="mb-3">
            <label>Photo actuelle :</label><br>
            <img src="{{ asset('uploads/' ~ produit.photo) }}" alt="Photo du produit" style="max-width: 200px;"><br>
            <small>Chemin : <code>{{ asset('uploads/' ~ produit.photo) }}</code></small>
        </div>
    {% endif %}

    <div class="row">
        <div class="col-12">
            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                {{ form_errors(form) }}
                {% for child in form %}
                    {% if child.vars.name != '_token' %}
                        <div class="mb-3">
                            {{ form_label(child) }}
                            {{ form_widget(child, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(child) }}
                        </div>
                    {% endif %}
                {% endfor %}

                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">Retour</a>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
