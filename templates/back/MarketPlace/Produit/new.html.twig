{% extends 'back/Dashboard.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Ajouter un Produit{% endblock %}

{% block body %}
<div class="container mt-5" style="margin-left: 250px;">
  <div class="card shadow-lg rounded w-50 mx-auto">
    <div class="card-header bg-primary text-white">
      <h2 class="h5 mb-0"><i class="fas fa-box-open me-2"></i> Ajouter un nouveau produit</h2>
    </div>

    {{ form_start(form, {
      attr: {
        enctype: 'multipart/form-data',
        novalidate: 'novalidate',
        class: 'p-4'
      }
    }) }}

    <div class="card-body row g-3">
      <div class="col-12">
        {{ form_row(form.nom) }}
      </div>
      <div class="col-12">
        {{ form_row(form.prix) }}
      </div>
      <div class="col-12">
        {{ form_row(form.description) }}
      </div>
      <div class="col-12">
        {{ form_row(form.photo) }}
      </div>
      <div class="col-12">
        {{ form_row(form.vendeurId) }}
      </div>
      <div class="col-12">
        {{ form_row(form.dateAjout) }}
      </div>
    </div>

    <div class="card-footer bg-light d-flex justify-content-end">
      <a href="{{ path('app_produit_index') }}" class="btn btn-outline-secondary me-2">
        <i class="fas fa-arrow-left"></i> Retour
      </a>
      <button type="submit" class="btn btn-primary">
        <i class="fas fa-plus-circle"></i> Ajouter
      </button>
    </div>

    {{ form_end(form) }}
  </div>
</div>
{% endblock %}
