
{% extends 'back/Dashboard.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Dashboard</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>

           
            <!-- Liste des Feedbacks -->
            <div class="container mt-4">
                <h2 class="mb-4">Liste des Feedbacks</h2>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">id_feedback</th>
                                <th scope="col">Contenu</th>
                                <th scope="col">Cin_participant</th>
                                <th scope="col">Cin_organisateur</th>
                                <th scope="col">date</th>
                                <th scope="col">details</th>
                                <th scope="col">supprimer</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for feedback in feedbacks %}
                                <tr>
                                    <td>{{ feedback.id_FeedBack }}</td>
                                    <td>{{ feedback.contenu }}</td>
                                    <td>{{ feedback.cin_participant }}</td>
                                    <td>{{ feedback.cin_organisateur }}</td>
                                    <td>{{ feedback.date_creation|date('Y-m-d H:i') }}</td>
                                    
                                    
                                    
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="" 
                                               class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                    <td>
                                        <a href="" 
                                           class="btn btn-sm btn-outline-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted">
                                        Aucun feedback disponible.
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </main>
</div>


{% endblock %}
