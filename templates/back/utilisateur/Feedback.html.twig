{% extends 'back/Dashboard.html.twig' %}

{% block title %}Feedbacks de l'utilisateur{% endblock %}

{% block body %}
    <h1>Feedbacks de l'utilisateur {{ CIN }}</h1>

    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Contenu</th>
                <th scope="col">Date de création</th>
            </tr>
        </thead>
        <tbody>
            {% for feedback in feedbacks %}
                <tr>
                    <td>{{ feedback.contenu }}</td>
                    <td>{{ feedback.date_creation|date('Y-m-d H:i') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2" class="text-center text-muted">
                        Aucun feedback trouvé pour cet utilisateur.
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
