{% extends 'back/Dashboard.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4">Dashboard</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
            
            <!-- Cartes de statistiques -->
            <div class="row">
                <!-- Carte des participants -->
                
                
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-mauve text-white mb-4">
                        <div class="card-body">
                            Nombre total des Hommes: {{ genderData.homme }}
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <a class="small text-white stretched-link" href="#">View Details</a>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
                
                <!-- Carte des femmes -->
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-mauve-dark text-white mb-4">
                        <div class="card-body">
                            Nombre total des Femmes: {{ genderData.femme }}
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <a class="small text-white stretched-link" href="#">View Details</a>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-mauve text-white mb-4">
                        <div class="card-body">
                            Nombre total des Participants: {{ participantCount }}
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <a class="small text-white stretched-link" href="#">View Details</a>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
                
                <!-- Carte des femmes -->
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-mauve-dark text-white mb-4">
                        <div class="card-body">
                            Nombre total des organisateurs:{{ organisateurCount }}
                        </div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
                            <a class="small text-white stretched-link" href="#">View Details</a>
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Graphiques pour les statistiques par genre -->
            <div class="row">
                <!-- Graphique des utilisateurs par genre -->
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-pie me-1"></i>
                            Répartition des utilisateurs par genre
                        </div>
                        <div class="card-body">
                            <canvas id="genderChart" width="100%" height="40"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Graphique des utilisateurs par rôle -->
                <div class="col-xl-6">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-chart-pie me-1"></i>
                            Répartition des utilisateurs par rôle
                        </div>
                        <div class="card-body">
                            <canvas id="roleChart" width="100%" height="40"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Liste des utilisateurs -->
            <div class="container mt-4">
                <h1 class="mb-4">Liste des Utilisateurs</h1>
                <div class="row mb-3">
                    <a href="{{ path('app_user_new')}}" class="btn btn-success">Ajouter</a>
                    <div class="col-md-6">
                        <input type="text" id="searchCin" class="form-control" placeholder="Rechercher par CIN">
                    </div>
                    <div class="col-md-6">
                        <select id="roleFilter" class="form-control">
                            <option value="">-- Filtrer par rôle --</option>
                            <option value="Admin">Admin</option>
                            <option value="Organisateur">Organisateur</option>
                            <option value="Participant">Participant</option>
                        </select>
                    </div>
                    
                </div>
                
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Photo</th>
                                <th scope="col">CIN</th>
                                <th scope="col">Nom complet</th>
                                <th scope="col">Email</th>
                                <th scope="col">Numéro_de_téléphone</th>
                                <th scope="col">Rôle</th>
                                <th scope="col">Détails</th>
                                <th scope="col">Modifier</th>
                                <th scope="col">Supprimer</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for utilisateur in utilisateurs %}
                            <tr>
                                <td>
                                    {% if utilisateur.PhotoUtilisateur %}
                                        <div class="image-preview">
                                            <img src="http://localhost/images/{{ utilisateur.PhotoUtilisateur }}" alt="User Image" class="img-fluid rounded-circle" width="50">
                                        </div>
                                    {% else %}
                                        <p class="text-muted">Aucune image</p>
                                    {% endif %}
                                </td>
                                <td>{{ utilisateur.Cin }}</td>
                                <td>{{ utilisateur.Nom }} {{ utilisateur.Prenom }}</td>
                                <td>{{ utilisateur.Email }}</td>
                                <td>{{ utilisateur.NumTel }}</td>
                                <td>
                                    <span class="badge bg-primary">{{ utilisateur.Role }}</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_user_show', {'CIN': utilisateur.Cin}) }}" 
                                           class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </td>
                                <td>
                                    <a href="{{ path('app_user_edit', {'CIN': utilisateur.Cin}) }}" class="btn btn-warning">Modifier</a>
                                </td>
                                <td>
                                    {% if utilisateur.Role != 'Admin' %}
                                        <a href="{{ path('app_user_delete', {'CIN': utilisateur.Cin}) }}" 
                                           class="btn btn-sm btn-outline-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center text-muted">
                                    Aucun utilisateur trouvé
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            
                
            </div>
        </div>
    </main>
</div>

{% block stylesheets %}
<style>
    .bg-mauve {
        background-color: #9b59b6 !important;
        color: white !important;
    }
    .bg-mauve-dark {
        background-color: #6f42c1 !important;
        color: white !important;
    }
</style>
{% endblock %}


{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Récupérer les données passées depuis le contrôleur
            var hommes = {{ genderData.homme }};
            var femmes = {{ genderData.femme }};
            
            // Créer le graphique par genre
            var ctxGender = document.getElementById('genderChart').getContext('2d');
            var genderChart = new Chart(ctxGender, {
                type: 'pie',
                data: {
                    labels: ['Hommes', 'Femmes'],
                    datasets: [{
                        label: 'Répartition des utilisateurs par genre',
                        data: [hommes, femmes],
                        backgroundColor: ['#6f42c1', '#9b59b6'],
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true
                }
            });

            // Récupérer les données de rôle
            var organisateurs = {{ roleData.organisateur }};
            var participants = {{ roleData.participant }};
            
            // Créer le graphique par rôle
            var ctxRole = document.getElementById('roleChart').getContext('2d');
            var roleChart = new Chart(ctxRole, {
                type: 'pie',
                data: {
                    labels: ['Organisateurs', 'Participants'],
                    datasets: [{
                        label: 'Répartition des utilisateurs par rôle',
                        data: [organisateurs, participants],
                        backgroundColor: ['#f6c23e', '#36b9cc'],
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true
                }
            });
        });

        // recherche par CIN
        document.addEventListener('DOMContentLoaded', function () {
        const searchInput = document.getElementById('searchCin');
        const rows = document.querySelectorAll('table tbody tr');

        searchInput.addEventListener('keyup', function () {
            const searchValue = this.value.trim().toLowerCase();

            rows.forEach(row => {
                const cinCell = row.querySelector('td:nth-child(2)');
                const cinValue = cinCell ? cinCell.textContent.trim().toLowerCase() : '';

                if (cinValue.includes(searchValue)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    });


    //filtre par rôle
    document.addEventListener('DOMContentLoaded', function () {
    const searchInput = document.getElementById('searchCin');
    const roleSelect = document.getElementById('roleFilter');
    const rows = document.querySelectorAll('table tbody tr');

    function filterRows() {
        const searchValue = searchInput.value.trim().toLowerCase();
        const selectedRole = roleSelect.value;

        rows.forEach(row => {
            const cinCell = row.querySelector('td:nth-child(2)');
            const roleCell = row.querySelector('td:nth-child(6) span');
            
            const cinValue = cinCell ? cinCell.textContent.trim().toLowerCase() : '';
            const roleValue = roleCell ? roleCell.textContent.trim() : '';

            const matchesCin = cinValue.includes(searchValue);
            const matchesRole = selectedRole === '' || roleValue === selectedRole;

            row.style.display = (matchesCin && matchesRole) ? '' : 'none';
        });
    }

    searchInput.addEventListener('keyup', filterRows);
    roleSelect.addEventListener('change', filterRows);
});

    </script>
{% endblock %}
{% endblock %}
