{% extends 'back/Dashboard.html.twig' %}

{% block title %}Ajouter un Événement{% endblock %}

{% block body %}
<div class="container-fluid px-4" style="margin-top: 150px;">
    <div class="row justify-content-end align-items-center min-vh-50">
        <div class="col-lg-8 col-xl-6 mb-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center font-weight-bold my-4">
                        <i class="fas fa-calendar-plus me-2"></i>Ajouter un Événement
                    </h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}
                        <div class="form-floating mb-4">
                            {{ form_widget(form.nom_evenement, {
                                'attr': {
                                    'class': 'form-control',
                                    'id': 'evenement_nom_evenement',
                                    'placeholder': 'Nom de l\'événement'
                                }
                            }) }}
                            {{ form_label(form.nom_evenement, 'Nom de l\'événement') }}
                            <div class="alert alert-danger d-none mt-1" id="nomEvenementError"></div>
                        </div>

                        <div class="form-floating mb-4">
                            {{ form_widget(form.date_evenement, {
                                'attr': {
                                    'class': 'form-control',
                                    'id': 'evenement_date_evenement',
                                    'placeholder': 'Date de l\'événement'
                                }
                            }) }}
                            {{ form_label(form.date_evenement, 'Date de l\'événement') }}
                            <div class="alert alert-danger d-none mt-1" id="dateEvenementError"></div>
                        </div>

                        <div class="form-floating mb-4">
                            {{ form_widget(form.lieu_evenement, {
                                'attr': {
                                    'class': 'form-control',
                                    'id': 'evenement_lieu_evenement',
                                    'placeholder': 'Lieu de l\'événement'
                                }
                            }) }}
                            {{ form_label(form.lieu_evenement, 'Lieu de l\'événement') }}
                            <div class="alert alert-danger d-none mt-1" id="lieuEvenementError"></div>
                        </div>

                        <div class="form-floating mb-4">
                            {{ form_widget(form.categorie, {
                                'attr': {
                                    'class': 'form-select',
                                    'id': 'evenement_categorie',
                                    'placeholder': 'Catégorie'
                                }
                            }) }}
                            {{ form_label(form.categorie, 'Catégorie') }}
                            <div class="alert alert-danger d-none mt-1" id="categorieError"></div>
                            <button type="button" class="btn btn-secondary mt-2" data-bs-toggle="modal" data-bs-target="#categorieModal">
                                Gérer les catégories
                            </button>
                        </div>
                    

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary px-4 py-2">
                                <i class="fas fa-save me-2"></i>Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal pour gérer les catégories -->
<div class="modal fade" id="categorieModal" tabindex="-1" aria-labelledby="categorieModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="categorieModalLabel">Gérer les catégories</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="categorieForm">
                    <div class="mb-3">
                        <label for="categorieNom" class="form-label">Nom de la catégorie</label>
                        <input type="text" id="categorieNom" class="form-control" placeholder="Nom de la catégorie">
                        <div class="alert alert-danger d-none mt-1" id="categorieNomError"></div>
                    </div>
                </form>
                <hr>
                <h6>Liste des catégories</h6>
                <ul id="categorieList" class="list-group mt-3">
                    <!-- Les catégories seront ajoutées ici dynamiquement -->
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}