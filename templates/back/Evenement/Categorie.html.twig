{% extends 'back/Dashboard.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}
<div class="container-fluid px-4" style="margin-top: 150px; margin-left: 100px;">
    <!-- Statistiques -->
    <div class="row mb-4 justify-content-end">
        <div class="col-md-5">
            <div class="card text-center shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="m-0">Total des Catégories</h5>
                </div>
                <div class="card-body">
                    <h3>{{ categories|length }}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card text-center shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="m-0">Statistiques des Événements</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        {% set maxEvents = 0 %}
                        {% for stat in categoriesStats %}
                            {% set maxEvents = max(maxEvents, stat.count) %}
                        {% endfor %}
                        
                        {% for stat in categoriesStats %}
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <span>{{ stat.nom }}</span>
                                    <span class="badge bg-primary rounded-pill">{{ stat.count }}</span>
                                </div>
                                <div class="progress" style="height: 5px;">
                                    <div class="progress-bar bg-success" role="progressbar" 
                                         style="width: {{ maxEvents ? (stat.count / maxEvents * 100) : 0 }}%"
                                         aria-valuenow="{{ stat.count }}" 
                                         aria-valuemin="0" 
                                         aria-valuemax="{{ maxEvents }}">
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulaire de recherche -->
    <div class="row mb-4 justify-content-end">
        <div class="col-10">
            <form method="get" class="row g-3">
                <div class="col-md-8">
                    <input type="text" name="q" class="form-control" placeholder="Rechercher une catégorie..." value="{{ app.request.query.get('q') }}">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">Rechercher</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Liste des catégories -->
    <div class="row justify-content-end">
        <div class="col-10">
            <div class="card shadow-lg border-0 rounded-lg mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center font-weight-bold my-4">
                        <i class="fas fa-list me-2"></i>Liste des Catégories
                    </h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <a href="{{ path('app_categorie_add') }}" class="btn btn-primary rounded-pill px-4">
                            <i class="fas fa-plus me-2"></i>Ajouter une catégorie
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Nom</th>
                                    <th>Description</th>
                                    <th>Image</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for categorie in categories %}
                                <tr>
                                    <td>{{ categorie.nomCategorie }}</td>
                                    <td>{{ categorie.description }}</td>
                                    <td>
                                        {% if categorie.imageUrl %}
                                            <img src="{{ asset('uploads/images/' ~ categorie.imageUrl) }}" alt="Image de {{ categorie.nomCategorie }}" style="max-height: 50px;">
                                        {% else %}
                                            Pas d'image
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-info btn-sm rounded-pill me-2">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning btn-sm rounded-pill me-2">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" action="{{ path('app_categorie_delete', {'id': categorie.id}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
                                                <button class="btn btn-danger btn-sm rounded-pill">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center">Aucune catégorie trouvée</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}