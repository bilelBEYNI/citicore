{% extends 'back/Dashboard.html.twig' %}

{% block title %}Événements de {{ organisateur.nom }}{% endblock %}

{% block body %}
<div class="container-fluid px-4" style="margin-top: 150px; margin-left: 100px;">
    <!-- Titre et info organisateur -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h2 class="text-primary">Événements organisés par {{ organisateur.nom }} {{ organisateur.prenom }}</h2>
        </div>
    </div>

    <!-- Liste des événements -->
    <div class="row justify-content-end">
        <div class="col-10">
            <div class="card shadow-lg border-0 rounded-lg mb-4">
                <div class="card-header bg-secondary text-white">
                    <h3 class="text-center font-weight-bold my-4">
                        <i class="fas fa-calendar-alt me-2"></i>Liste des Événements
                    </h3>
                </div>
                <div class="card-body">
                    {% if evenements is empty %}
                        <div class="alert alert-info text-center">Aucun événement trouvé pour cet organisateur.</div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Nom</th>
                                        <th>Date</th>
                                        <th>Lieu</th>
                                        <th>Catégorie</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for evenement in evenements %}
                                    <tr>
                                        <td>{{ evenement.nomEvenement }}</td>
                                        <td>{{ evenement.dateEvenement ? evenement.dateEvenement|date('Y-m-d H:i') : '' }}</td>
                                        <td>{{ evenement.lieuEvenement }}</td>
                                        <td>{{ evenement.categorie ? evenement.categorie.nomCategorie : 'Non catégorisé' }}</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('app_evenement_show', {'id': evenement.id_evenement}) }}" class="btn btn-info btn-sm rounded-pill me-2">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('app_evenement_edit', {'id': evenement.id_evenement}) }}" class="btn btn-warning btn-sm rounded-pill me-2">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form method="post" action="{{ path('app_evenement_delete', {'id': evenement.id_evenement}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.id_evenement) }}">
                                                    <button class="btn btn-danger btn-sm rounded-pill">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
