{% extends 'back/Dashboard.html.twig' %}

{% block title %}Liste des Événements{% endblock %}

{% block body %}
<div class="container-fluid px-4" style="margin-top: 150px; margin-left: 100px;">
    <!-- Statistiques en haut -->
    <div class="row mb-4 justify-content-end">
        <div class="col-md-5">
            <div class="card text-center shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="m-0">Total des Événements</h5>
                </div>
                <div class="card-body">
                    <h3>{{ totalEvenements }}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card text-center shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="m-0">Total des Catégories</h5>
                </div>
                <div class="card-body">
                    <h3>{{ totalCategories }}</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulaire de recherche -->
    <div class="row mb-4 justify-content-end">
        <div class="col-10">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="q" class="form-control" placeholder="Rechercher un événement..." value="{{ currentQuery }}">
                </div>
                <div class="col-md-4">
                    <input type="text" name="lieu" class="form-control" placeholder="Filtrer par lieu..." value="{{ currentLieu }}">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">Rechercher</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Liste des événements -->
    <div class="row justify-content-end">
        <div class="col-10">
            <div class="card shadow-lg border-0 rounded-lg mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center font-weight-bold my-4">
                        <i class="fas fa-calendar-alt me-2"></i>Liste des Événements
                    </h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <a href="{{ path('app_evenement_new') }}" class="btn btn-primary rounded-pill px-4">
                            <i class="fas fa-plus me-2"></i>Ajouter un événement
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Nom</th>
                                    <th>Date</th>
                                    <th>Lieu</th>
                                    <th>Catégorie</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for evenement in evenements %}
                                <tr>
                                    <td>{{ evenement.nomEvenement }}</td>
                                    <td>{{ evenement.dateEvenement ? evenement.dateEvenement|date('Y-m-d H:i') : '' }}</td>
                                    <td>{{ evenement.lieuEvenement }}</td>
                                    <td>{{ evenement.categorie.nomCategorie }}</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_evenement_show', {'id': evenement.id_evenement}) }}" class="btn btn-info btn-sm rounded-pill me-2">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_evenement_edit', {'id': evenement.id_evenement}) }}" class="btn btn-warning btn-sm rounded-pill me-2">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" action="{{ path('app_evenement_delete', {'id': evenement.id_evenement}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.id_evenement) }}">
                                                <button class="btn btn-danger btn-sm rounded-pill">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center">Aucun événement trouvé</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
