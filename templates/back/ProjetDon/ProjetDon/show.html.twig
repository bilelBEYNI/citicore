{% extends 'back/Dashboard.html.twig' %}

{% block title %}ProjetDon{% endblock %}

{% block body %}
    

    <div class="container my-5" style="margin-left: 250px; padding-bottom: 50px;">

        <h1 class="text-center mb-4">Détails du Projet</h1>

        <div class="mx-auto" style="max-width: 700px;">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th>Nom</th>
                        <td>{{ projet_don.nom }}</td>
                    </tr>
                    <tr>
                        <th>Montant Reçu</th>
                        <td>{{ projet_don.montantRecu }}</td>
                    </tr>
                    <tr>
                        <th>Objectif</th>
                        <td>{{ projet_don.objectif }}</td>
                    </tr>
                    <tr>
                        <th>Date début</th>
                        <td>{{ projet_don.dateDebut ? projet_don.dateDebut|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Date fin</th>
                        <td>{{ projet_don.dateFin ? projet_don.dateFin|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Association</th>
                        <td>{{ projet_don.association.nom }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-center mt-4 gap-2">
                
                <a href="{{ path('app_projet_don_edit', {'id_Projet_Don': projet_don.id_Projet_Don}) }}" class="btn btn-secondary">Modifier✏️</a>
                {{ include('back/ProjetDon/ProjetDon/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
