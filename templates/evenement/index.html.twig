{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <h1>Evenement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id_evenement</th>
                <th>Nom_evenement</th>
                <th>Date_evenement</th>
                <th>Lieu_evenement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.idEvenement }}</td>
                <td>{{ evenement.nomEvenement }}</td>
                <td>{{ evenement.dateEvenement }}</td>
                <td>{{ evenement.lieuEvenement }}</td>
                <td>
                    <a href="{{ path('app_evenement_show', {'id_evenement': evenement.id_evenement}) }}">show</a>
                    <a href="{{ path('app_evenement_edit', {'id_evenement': evenement.id_evenement}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_evenement_new') }}">Create new</a>
{% endblock %}
