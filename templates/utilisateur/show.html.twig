{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Cin</th>
                <td>{{ utilisateur.Cin }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ utilisateur.Nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ utilisateur.Prenom }}</td>
            </tr>
            <tr>
                <th>Num_Tel</th>
                <td>{{ utilisateur.NumTel }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ utilisateur.Email }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ utilisateur.Genre }}</td>
            </tr>
            <tr>
                <th>Photo_Utilisateur</th>
                <td>{{ utilisateur.PhotoUtilisateur }}</td>
            </tr>
            <tr>
                <th>Mot_De_Passe</th>
                <td>{{ utilisateur.MotDePasse }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ utilisateur.Role }}</td>
            </tr>
            <tr>
                <th>Token</th>
                <td>{{ utilisateur.Token }}</td>
            </tr>
            <tr>
                <th>Failed_attempts</th>
                <td>{{ utilisateur.failedAttempts }}</td>
            </tr>
            <tr>
                <th>Ban_time</th>
                <td>{{ utilisateur.banTime ? utilisateur.banTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Login_failures</th>
                <td>{{ utilisateur.loginFailures }}</td>
            </tr>
            <tr>
                <th>Is_banned</th>
                <td>{{ utilisateur.isBanned ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_utilisateur_index') }}">back to list</a>

    <a href="{{ path('app_utilisateur_edit', {'Cin': utilisateur.Cin}) }}">edit</a>

    {{ include('utilisateur/_delete_form.html.twig') }}
{% endblock %}
