{% extends '/front/index.html.twig' %}

{% block title %}Chatbot{% endblock %}

{% block body %}
    {% include 'front/navbar.html.twig' %}
    <div class="container mt-5">
        <h2 class="text-center mb-4">üí¨ Votre assistant pour comprendre les Projets & Associations</h2>
        <div class="card shadow-sm p-4">
            <div id="chat-box" style="height: 300px; overflow-y: auto; border: 1px solid #ccc; padding: 10px;">
                <!-- Messages will appear here -->
            </div>
            <form id="chat-form" class="mt-3 d-flex">
                <input type="text" id="user-input" class="form-control me-2" placeholder="√âcris ton message..." required />
                <button type="submit" class="btn btn-primary">Envoyer</button>
            </form>
        </div>
    </div>

    <script>
        const form = document.getElementById('chat-form');
        const input = document.getElementById('user-input');
        const chatBox = document.getElementById('chat-box');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            const userMessage = input.value;
            chatBox.innerHTML += `<div><strong>Vous:</strong> ${userMessage}</div>`;
            input.value = '';

            try {
    const response = await fetch('https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent?key=AIzaSyAyh1kqS28Hwb2w9KESbpxdpGE9D4kO06s', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
            contents: [{ parts: [{ text: userMessage }] }]
        })
    });

    const data = await response.json();
    const botText = data.candidates?.[0]?.content?.parts?.[0]?.text || "ü§ñ Je n‚Äôai pas compris, peux-tu reformuler ?";
    
    chatBox.innerHTML += `<div><strong>ü§ñ Gemini:</strong> ${botText}</div>`;
    chatBox.scrollTop = chatBox.scrollHeight;

} catch (error) {
    chatBox.innerHTML += `<div><strong>ü§ñ Gemini:</strong> Une erreur est survenue ‚ùå</div>`;
    console.error(error);
}

        });
    </script>
{% endblock %}
