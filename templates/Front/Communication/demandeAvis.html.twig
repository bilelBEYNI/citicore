{% extends 'base.html.twig' %}

{% block title %}Détails de la Demande{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Détails de la Demande</h1>
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Demande ID: {{ demande.demande_id }}</h5>
            <p><strong>Nom:</strong> {{ demande.contenu }}</p>
            <p><strong>Date:</strong> {{ demande.date_demande|date('d/m/Y') }}</p>
            <p><strong>Statut:</strong> {{ demande.statut }}</p>
        </div>
    </div>

    <h2>Avis associés</h2>
    {% if avis|length > 0 %}
        <ul class="list-group">
            {% for avis in avis %}
                <li class="list-group-item">
                    <strong>{{ avis.utilisateur.nom }}</strong>: {{ avis.contenu }}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="text-muted">Aucun avis pour cette demande.</p>
    {% endif %}
</div>
{% endblock %}