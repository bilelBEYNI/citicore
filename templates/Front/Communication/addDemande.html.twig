{% extends 'base.html.twig' %}

{% block title %}Ajouter une Demande{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">Ajouter une Demande</h1>

        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.contenu) }}
                {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.contenu) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.date_demande) }}
                {{ form_widget(form.date_demande, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.date_demande) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.statut) }}
                {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.statut) }}
            </div>
            <button type="submit" class="btn btn-primary">Ajouter</button>
        {{ form_end(form) }}
    </div>
{% endblock %}