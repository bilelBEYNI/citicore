{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4"> Organisateurs</h1>

    <div class="row">
        {% for organisateur in organisateurs %}
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm text-center">
                    <!-- Affichage de l'image au centre -->
                    <div class="d-flex justify-content-center mt-3">
                        <img src="{{ asset('http://localhost/images/' ~ organisateur.PhotoUtilisateur) }}" 
                             alt="Image de {{ organisateur.nom }}" 
                             class="rounded-circle" 
                             style="width: 150px; height: 150px; object-fit: cover;">
                    </div>

                    <div class="card-body">
                        <h5 class="card-title">{{ organisateur.nom }} {{ organisateur.prenom }}</h5>
                        <p class="card-text">
                            <strong>Email :</strong> {{ organisateur.email }}
                        </p>
                        <!-- Bouton pour ajouter un feedback -->
                        <a href="{{ path('feedback_add', { Cin: organisateur.Cin }) }}" class="btn btn-primary">
                            Ajouter un Feedback
                        </a>
                        <a href="{{ path('feedback_view', { Cin: organisateur.Cin }) }}" class="btn btn-outline-secondary">
                            Voir les Feedbacks
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center">Aucun organisateur trouv√©.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 10px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .card-text {
            font-size: 1rem;
        }

        .rounded-circle {
            border: 2px solid #ddd;
        }

        .btn-primary {
            margin-top: 15px;
        }
    </style>
{% endblock %}