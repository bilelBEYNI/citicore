{% extends 'base.html.twig' %}

{% block title %}Éditer le profil{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center my-4">Éditez votre profil</h1>

        {{ form_start(form) }}
            <div class="row">
                <!-- Champ CIN -->
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        {{ form_label(form.cin, 'CIN') }}
                        {{ form_widget(form.cin, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.cin) }}
                    </div>
                </div>

                <!-- Champ Nom -->
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        {{ form_label(form.nom, 'Nom') }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Champ Prénom -->
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        {{ form_label(form.prenom, 'Prénom') }}
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.prenom) }}
                    </div>
                </div>

                <!-- Champ Numéro de téléphone -->
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        {{ form_label(form.numTel, 'Numéro de téléphone') }}
                        {{ form_widget(form.numTel, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.numTel) }}
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Champ Email -->
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        {{ form_label(form.email, 'Email') }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.email) }}
                    </div>
                </div>

                <!-- Champ Photo Utilisateur -->
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        {{ form_label(form.photoUtilisateur, 'Photo') }}
                        {{ form_widget(form.photoUtilisateur, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.photoUtilisateur) }}
                    </div>
                </div>
            </div>

            <!-- Bouton de soumission -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success">Mettre à jour</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
    