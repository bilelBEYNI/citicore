{% extends 'base.html.twig' %}

{% block title %}Événements{% endblock %}

{% block body %}
  {# Styles personnalisés pour couleurs innovantes #}
  <style>
    :root {
      --filter-btn-bg: #ff7e5f;
      --filter-btn-hover: #ff9472;
      --calendar-btn-bg: #6a11cb;
      --calendar-btn-hover: #2575fc;
      --card-bg: #fdfdfd;
      --card-shadow: rgba(0, 0, 0, 0.1);
    }
    .btn-filter {
      background-color: var(--filter-btn-bg);
      color: #fff;
      border: none;
    }
    .btn-filter:hover {
      background-color: var(--filter-btn-hover);
    }
    .btn-calendar-custom {
      background: var(--calendar-btn-bg);
      color: #fff;
      border: none;
    }
    .btn-calendar-custom:hover {
      background: var(--calendar-btn-hover);
    }
    .event-card {
      background-color: var(--card-bg);
      box-shadow: 0 4px 8px var(--card-shadow);
      border-top: 4px solid transparent;
    }
  </style>

  <section class="events-list py-5">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="m-0">Liste des événements</h1>
        <form method="get" action="{{ path('app_evenement_front') }}" class="form-inline d-flex">
          <div class="input-group">
            <select name="categorie" id="categorie" class="form-control">
              <option value="">Toutes les catégories</option>
              {% for category in categories %}
                <option value="{{ category.id }}" {% if category.id == currentCategorieId %}selected{% endif %}>
                  {{ category.nomCategorie }}
                </option>
              {% endfor %}
            </select>
            <div class="input-group-append">
              <button type="submit" class="btn btn-filter">Filtrer</button>
            </div>
          </div>
          <a href="{{ path('app_evenement_calendrier') }}" class="btn btn-calendar-custom ml-2" title="Voir le calendrier">
            <i class="fas fa-calendar-alt"></i> Calendrier
          </a>
        </form>
      </div>

      <div class="row g-4">
        {% for item in evenementsAvecImages %}
          {% set e = item.event %}
          <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
              {# Image avec LiipImagineBundle #}
              {% if item.imageUrl %}
                <img 
                  src="{{ item.imageUrl | imagine_filter('event_thumb') }}"
                  class="card-img-top" 
                  alt="Image de {{ e.nomEvenement }}"
                >
              {% else %}
                <div class="bg-light d-flex align-items-center justify-content-center" style="height:200px;">
                  <span class="text-muted">Pas d'image</span>
                </div>
              {% endif %}

              <div class="card-body d-flex flex-column">
                {# Date de l'événement #}
                {% if e.dateEvenement %}
                  <p class="card-text mb-1">
                    <strong>Date :</strong>
                    {{ e.dateEvenement|date('d/m/Y H:i') }}
                  </p>
                {% endif %}

                {# Lieu #}
                {% if e.lieuEvenement %}
                  <p class="card-text mb-1">
                    <strong>Lieu :</strong> {{ e.lieuEvenement }}
                  </p>
                {% endif %}

                {# Catégorie #}
                {% if e.categorie %}
                  <p class="card-text mb-3">
                    <strong>Catégorie :</strong> {{ e.categorie.nomCategorie }}
                  </p>
                {% endif %}
                
              </div>
            </div>
          </div>
        {% else %}
          <p class="text-center">Aucun événement à afficher.</p>
        {% endfor %}
      </div>
    </div>
  </section>
{% endblock %}
