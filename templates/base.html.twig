<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}CitiCore Admin{% endblock %}</title>

    <!-- CSS du template -->
    <link href="{{ asset('back/css/styles.css') }}" rel="stylesheet">
    <!-- Font Awesome (optionnel) -->
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">

    <!-- Topbar -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" href="#">CitiCore Admin</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i></button>
    </nav>

    <div id="layoutSidenav">
        <!-- Sidebar -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Dashboard</div>
                        <a class="nav-link" href="#">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Accueil
                        </a>
                        <div class="sb-sidenav-menu-heading">Modules</div>
                        <a class="nav-link" href="#">
                            <div class="sb-nav-link-icon"><i class="fas fa-comment"></i></div>
                            Réclamations
                        </a>
                        <a class="nav-link" href="#">
                            <div class="sb-nav-link-icon"><i class="fas fa-gift"></i></div>
                            Donations
                        </a>
                        <a class="nav-link" href="#">
                            <div class="sb-nav-link-icon"><i class="fas fa-store"></i></div>
                            Marketplace
                        </a>
                    </div>
                </div>
            </nav>
        </div>

        <!-- Contenu -->
        <div id="layoutSidenav_content">
            <main class="p-4">
                {% block body %}
                <!-- Contenu dynamique ici -->
                {% endblock %}
            </main>

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4 text-center">
                    <div class="small">© 2025 CitiCore - Projet Smart City</div>
                </div>
            </footer>
        </div>
    </div>

    <!-- JS du template -->
    <script src="{{ asset('back/js/scripts.js') }}"></script>
    <script src="{{ asset('back/js/datatables-simple-demo.js') }}"></script>
</body>
</html>
