{# templates/cart.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}ðŸ›’ Mon Panier{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f1f0ff;
        }

        .cart-container {
            background-color: #2e2e2e;
            color: white;
            border-radius: 20px;
            padding: 30px;
            margin-top: 40px;
        }

        .cart-item {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #444;
            padding: 15px 0;
        }

        .cart-item .details {
            flex: 2;
            margin-right: 15px;
        }

        .cart-item h5 {
            margin: 0;
        }

        .qty {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .qty span {
            background-color: #444;
            padding: 5px 10px;
            border-radius: 5px;
            min-width: 30px;
            text-align: center;
        }

        .btn-qty {
            border: none;
            background-color: transparent;
            color: white;
            font-size: 1.4rem;
            text-decoration: none;
        }

        .btn-qty:hover {
            color: #00c896;
        }

        .summary-box {
            background-color: #1e1e1e;
            border-radius: 15px;
            padding: 20px;
            margin-top: 20px;
        }

        .summary-box h4 {
            font-weight: bold;
            margin-bottom: 20px;
        }

        .summary-line {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .btn-checkout {
            background-color: #00c896;
            color: white;
            border: none;
            padding: 12px;
            width: 100%;
            font-weight: bold;
            border-radius: 10px;
            margin-top: 15px;
            text-align: center;
            display: block;
        }

        .btn-checkout:hover {
            background-color: #00b083;
        }

        .btn-remove {
            color: #ff4d4f;
            text-decoration: none;
            font-size: 1.4rem;
        }

        .btn-remove:hover {
            color: #ff6b6c;
        }

        .back-shop {
            margin-top: 25px;
            display: inline-block;
            color: #ffffff;
            text-decoration: none;
        }

        .back-shop i {
            margin-right: 8px;
        }

        .text-muted {
            color: #cccccc !important;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="row cart-container">
        <div class="col-md-8">
            <h2>ðŸ›’ Mon Panier</h2>

            {% if items is empty %}
                <div class="alert alert-light text-center mt-4">Votre panier est vide.</div>
            {% else %}
                {% for item in items %}
                <div class="cart-item">
                    <div class="details">
                        <h5>{{ item.produit.nom }}</h5>
                        <div class="text-muted">{{ item.produit.prix }} â‚¬ x {{ item.quantity }}</div>
                    </div>
                    <div class="qty">
                        <a href="{{ path('app_cart_update', { id: item.produit.id_produit, operation: 'minus' }) }}" class="btn-qty">â€“</a>
                        <span>{{ item.quantity }}</span>
                        <a href="{{ path('app_cart_update', { id: item.produit.id_produit, operation: 'plus' }) }}" class="btn-qty">+</a>
                    </div>
                    <div class="fw-bold">
                        {{ item.sousTotal|number_format(2, '.', ',') }} â‚¬
                    </div>
                    <a href="{{ path('app_cart_remove', { id: item.produit.id_produit }) }}" class="btn-remove ms-3" title="Supprimer">
                        <i class="bi bi-trash3-fill"></i>
                    </a>
                </div>
                {% endfor %}

                <a href="{{ path('app_shop') }}" class="back-shop mt-3"><i class="bi bi-arrow-left"></i> Retour Ã  la boutique</a>
            {% endif %}
        </div>

        <div class="col-md-4">
            <div class="summary-box">
                <h4>RÃ©sumÃ©</h4>
                <div class="summary-line">
                    <span>Articles</span>
                    <span>{{ items|length }}</span>
                </div>
                <div class="summary-line">
                    <span>Total</span>
                    <span>{{ total|number_format(2, '.', ',') }} â‚¬</span>
                </div>
                <div class="summary-line">
                    <span>Livraison</span>
                    <span>5.00 â‚¬</span>
                </div>
                <hr class="text-secondary">
                <div class="summary-line fw-bold">
                    <span>Total Ã  payer</span>
                    <span>{{ (total + 5)|number_format(2, '.', ',') }} â‚¬</span>
                </div>
                <a href="{{ path('app_cart_checkout') }}" class="btn-checkout mt-3">âœ” Valider la commande</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
