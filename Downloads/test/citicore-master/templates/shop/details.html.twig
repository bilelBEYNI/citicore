{# templates/shop/details.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ produit.nom|capitalize }} - Détails{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: #f5f7fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .product-wrapper {
            background: white;
            border-radius: 25px;
            padding: 40px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
            transition: 0.4s ease-in-out;
        }

        .product-wrapper:hover {
            transform: scale(1.01);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
        }

        .product-image {
            width: 100%;
            height: auto;
            border-radius: 20px;
            object-fit: cover;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        }

        .btn-custom {
            padding: 12px 28px;
            border-radius: 50px;
            font-weight: 500;
            transition: 0.3s;
            font-size: 1.1rem;
        }

        .btn-success:hover {
            background-color: #28a745;
            box-shadow: 0 6px 18px rgba(40, 167, 69, 0.5);
        }

        .btn-back {
            background: transparent;
            border: 2px solid #0d6efd;
            color: #0d6efd;
        }

        .btn-back:hover {
            background: #0d6efd;
            color: white;
            box-shadow: 0 6px 18px rgba(13, 110, 253, 0.4);
        }

        .display-title {
            font-size: 2.5rem;
            font-weight: bold;
            text-transform: uppercase;
            color: #0d6efd;
        }

        .price {
            font-size: 1.8rem;
            font-weight: bold;
            color: #28a745;
        }

        .icon {
            margin-right: 10px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-title">{{ produit.nom }}</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10 product-wrapper">
            <div class="row align-items-center">
                <div class="col-md-6 mb-4 mb-md-0">
                    <img src="{{ asset('uploads/' ~ produit.photo) }}" class="product-image" alt="{{ produit.nom }}">
                </div>
                <div class="col-md-6">
                    <p class="fs-5 mb-3"><strong>Description :</strong></p>
                    <p class="text-muted">{{ produit.description }}</p>

                    <p class="mt-4 mb-4"><strong>Prix :</strong> <span class="price">{{ produit.prix }} €</span></p>

                    <a href="{{ path('app_cart_add', { id: produit.idProduit }) }}" class="btn btn-success btn-custom">
                        <i class="bi bi-cart-plus icon"></i> Ajouter au panier
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a href="{{ path('app_shop') }}" class="btn btn-back btn-custom">
            <i class="bi bi-arrow-left-circle icon"></i> Retour à la boutique
        </a>
    </div>
</div>
{% endblock %}
